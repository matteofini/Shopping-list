<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="top">

	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="center"
		android:textColor="#FFFFFF" android:textSize="20sp" android:id="@+id/editlist_title" />
	<EditText android:hint="inserisci il contenuto della lista"
		android:gravity="top" android:layout_above="@+id/relativeLayout1"
		android:layout_below="@+id/editlist_title" android:layout_alignLeft="@+id/editlist_title"
		android:layout_alignRight="@+id/editlist_title" android:id="@+id/editlist_content"
		android:isScrollContainer="true" android:scrollbars="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent"></EditText>
	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_alignParentBottom="true" android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignParentLeft="true"
			android:id="@+id/button_save" android:src="@drawable/save_mdpi"></ImageButton>
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignParentRight="true"
			android:id="@+id/button_cancel" android:src="@drawable/cancel_mdpi"></ImageButton>
	</RelativeLayout>
</RelativeLayout>
